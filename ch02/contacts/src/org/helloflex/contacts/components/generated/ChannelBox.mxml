<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="Channel"
  xmlns:rcomponents="org.ruboss.components.*">
<mx:Script><![CDATA[
  import org.ruboss.Ruboss;
  import org.ruboss.utils.RubossUtils;
  import contacts.models.Channel;

  [Bindable]
  public var editedChannel:Channel = new Channel();
  
  public function createChannel():void {
    var channel:Channel = new Channel();
    channel.name = nameTextInput.text;
    channel.characterLimit = int(characterLimitTextInput.text);

    Ruboss.models.create(channel, onChannelCreate);
  }

  public function updateChannel():void {
    editedChannel.name = nameTextInput.text;
    editedChannel.characterLimit = int(characterLimitTextInput.text);

    Ruboss.models.update(editedChannel, onChannelUpdate);
  }

  public function destroyChannel():void {
    Ruboss.models.destroy(editedChannel, onChannelDestroy);
  }
  
  private function onChannelSelect():void {
    editedChannel = RubossUtils.clone(channelsDataGrid.selectedItem) as Channel;
  }
  
  private function onChannelCreate(channel:Channel):void {
    editedChannel = new Channel;
  }
  
  private function onChannelUpdate(channel:Channel):void {
    channelsDataGrid.selectedItem = channel;
    editedChannel = RubossUtils.clone(channel) as Channel;
  }
  
  private function onChannelDestroy(channel:Channel):void {
    onChannelCreate(channel);
  }
]]></mx:Script>
  <mx:Panel id="channelsPanel" title="Channels List"
    width="{width}" height="300">
    <mx:DataGrid id="channelsDataGrid"
      height="100%"
      horizontalScrollPolicy="auto"
      dataProvider="{Ruboss.models.index(Channel)}"
      change="onChannelSelect()">
      <mx:columns>
        <mx:DataGridColumn dataField="name" headerText="Name"
          width="150" minWidth="100"/>
        <mx:DataGridColumn dataField="characterLimit" headerText="CharacterLimit"
          width="150" minWidth="100"/>
        <mx:DataGridColumn headerText="" width="70" minWidth="70"
          editable="false" dataField="name">
          <mx:itemRenderer>
            <mx:Component>
              <mx:HBox horizontalAlign="center" paddingLeft="2"
                paddingRight="2">
                <mx:Button label="delete" width="100%"
                  click="outerDocument.destroyChannel()">
                </mx:Button>
              </mx:HBox>
            </mx:Component>
          </mx:itemRenderer>
        </mx:DataGridColumn>
      </mx:columns>
    </mx:DataGrid>
  </mx:Panel>
  <mx:Panel title="Channel Editor" width="100%" height="{height - 320}" verticalScrollPolicy="auto">
    <mx:Form width="100%" height="100%">
      <mx:FormItem label="Name" width="100%">
        <mx:TextInput id="nameTextInput" width="100%"
          text="{editedChannel.name}"/>
      </mx:FormItem>
      <mx:FormItem label="CharacterLimit" width="100%">
        <mx:TextInput id="characterLimitTextInput" width="100%"
          text="{editedChannel.characterLimit}"/>
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%" height="100%">
      <mx:Button label="Create Channel" width="34%" height="30"
        click="createChannel()"/>
      <mx:Button label="Update Channel" width="33%" height="30"
        enabled="{channelsDataGrid.selectedItem != null}"
        click="updateChannel()"/>
      <mx:Button label="Delete Channel" width="33%" height="30"
        enabled="{channelsDataGrid.selectedItem != null}"
        click="destroyChannel()"/>
    </mx:ControlBar>
  </mx:Panel>
</mx:VBox>