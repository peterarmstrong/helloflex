<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="User"
  xmlns:rcomponents="org.ruboss.components.*">
<mx:Script><![CDATA[
  import org.ruboss.Ruboss;
  import org.ruboss.utils.RubossUtils;
  import contacts.models.User;

  [Bindable]
  public var editedUser:User = new User();
  
  public function createUser():void {
    var user:User = new User();
    user.login = loginTextInput.text;
    user.password = passwordTextInput.text;

    Ruboss.models.create(user, onUserCreate);
  }

  public function updateUser():void {
    editedUser.login = loginTextInput.text;
    editedUser.password = passwordTextInput.text;

    Ruboss.models.update(editedUser, onUserUpdate);
  }

  public function destroyUser():void {
    Ruboss.models.destroy(editedUser, onUserDestroy);
  }
  
  private function onUserSelect():void {
    editedUser = RubossUtils.clone(usersDataGrid.selectedItem) as User;
  }
  
  private function onUserCreate(user:User):void {
    editedUser = new User;
  }
  
  private function onUserUpdate(user:User):void {
    usersDataGrid.selectedItem = user;
    editedUser = RubossUtils.clone(user) as User;
  }
  
  private function onUserDestroy(user:User):void {
    onUserCreate(user);
  }
]]></mx:Script>
  <mx:Panel id="usersPanel" title="Users List"
    width="{width}" height="300">
    <mx:DataGrid id="usersDataGrid"
      height="100%"
      horizontalScrollPolicy="auto"
      dataProvider="{Ruboss.models.index(User)}"
      change="onUserSelect()">
      <mx:columns>
        <mx:DataGridColumn dataField="login" headerText="Login"
          width="150" minWidth="100"/>
        <mx:DataGridColumn dataField="password" headerText="Password"
          width="150" minWidth="100"/>
        <mx:DataGridColumn headerText="" width="70" minWidth="70"
          editable="false" dataField="name">
          <mx:itemRenderer>
            <mx:Component>
              <mx:HBox horizontalAlign="center" paddingLeft="2"
                paddingRight="2">
                <mx:Button label="delete" width="100%"
                  click="outerDocument.destroyUser()">
                </mx:Button>
              </mx:HBox>
            </mx:Component>
          </mx:itemRenderer>
        </mx:DataGridColumn>
      </mx:columns>
    </mx:DataGrid>
  </mx:Panel>
  <mx:Panel title="User Editor" width="100%" height="{height - 320}" verticalScrollPolicy="auto">
    <mx:Form width="100%" height="100%">
      <mx:FormItem label="Login" width="100%">
        <mx:TextInput id="loginTextInput" width="100%"
          text="{editedUser.login}"/>
      </mx:FormItem>
      <mx:FormItem label="Password" width="100%">
        <mx:TextInput id="passwordTextInput" width="100%"
          text="{editedUser.password}"/>
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%" height="100%">
      <mx:Button label="Create User" width="34%" height="30"
        click="createUser()"/>
      <mx:Button label="Update User" width="33%" height="30"
        enabled="{usersDataGrid.selectedItem != null}"
        click="updateUser()"/>
      <mx:Button label="Delete User" width="33%" height="30"
        enabled="{usersDataGrid.selectedItem != null}"
        click="destroyUser()"/>
    </mx:ControlBar>
  </mx:Panel>
</mx:VBox>